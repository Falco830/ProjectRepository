      */
    } 
    
	private Node addNodeToNode(Node current) {
		
		Node temp = root;
		if(temp != null) {
			while(temp.value != 0) {
				//System.out.println("temp.value > current.value " + temp.value + " " + current.value );
				if(temp.value > current.value) {
					if(temp.left != null) {
						temp = temp.left;
						continue;
					}
						temp.left = current;
						return temp.left;
					
				}else {
					if(temp.right != null) {
						temp = temp.right;
						continue;
					}
						temp.right = current;
						return temp.right;					
				}
			}
		}else {
			root = current;		//if no root exists create new one
		}

		return current;
	}
	
}
